@model theMINIclassy.Models.Style



@{

    ViewData["Title"] = "Create";

}



<h2>Create</h2>



<form action="Create" id="postTo" method="post">

    <div class="form-horizontal">

        <h4>Style</h4>

        <hr />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">

            <label asp-for="Code" class="col-md-2 control-label"></label>

            <div class="col-md-10">

                <input asp-for="Code" class="form-control" />

                <span asp-validation-for="Code" class="text-danger" />

            </div>

        </div>

        <div class="form-group">

            <label asp-for="Title" class="col-md-2 control-label"></label>

            <div class="col-md-10">

                <input asp-for="Title" class="form-control" />

                <span asp-validation-for="Title" class="text-danger" />

            </div>

        </div>

        <div class="form-group">

            <div class="col-md-offset-2 col-md-10">

                <button type="button" onclick="Create('Add')">Save and Add Pattern Pieces</button>
                <button type="button" onclick="Create('Save')">Save Style</button>

            </div>

        </div>

    </div>

</form>



<div>

    <a asp-action="Index">Back to List</a>

</div>

<script type="text/javascript">
    function Create(choice) {
        if (choice == "Add") {
            $('#postTo').attr("action", "AddPatternPieceToStyle");
        }
  
            $('#postTo').submit();
        }

    </script>

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}