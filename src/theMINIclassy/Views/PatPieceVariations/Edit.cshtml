@model theMINIclassy.Models.PatPieceVariation

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>PatPieceVariation</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
        <div class="form-group" hidden>
            <label asp-for="PatPieceId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="PatPieceId" class="form-control" asp-items="ViewBag.PatPieceId"></select>
                <span asp-validation-for="PatPieceId" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="VariationId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="VariationId" class="form-control" asp-items="ViewBag.VariationId"></select>
                <span asp-validation-for="VariationId" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-controller="PatternPieces" asp-action="details" asp-route-id="@Model.PatPieceId">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
