@model theMINIclassy.Models.PatPieceVariation

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Add Pattern Piece to Variation</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(model => model.VariationId)
        <div class="form-group">
            <label asp-for="PatPieceId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="PatPieceId" class="form-control" asp-items="ViewBag.PatPieceId"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
