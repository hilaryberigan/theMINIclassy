@model theMINIclassy.Models.ManageViewModels.ProductViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Product.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Product.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Product.ImagePath)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Product.ImagePath)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Product.MinThreshold)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Product.MinThreshold)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Product.Quantity)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Product.Quantity)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Product.SKU)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Product.SKU)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Product.TechPackPath)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Product.TechPackPath)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Product.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Product.Title)
        </dd>
        @if (Model.PFQuantities != null)
        {
            <dt>Fabric(s)</dt>
            @foreach (var item in Model.PFQuantities)
            {
                if (item.ProductId == Model.Product.Id)
                {
                    @foreach (var x in Model.Fabrics)
                    {
                        if (x.Id == item.FabricId)
                        {
                            <dd>@item.QtyFabricOnProduct <strong>yards of</strong> @x.Title | <a asp-controller="ProductFabricQuantities" asp-action="Edit" asp-route-id="@item.Id">Edit</a></dd>
                        }
                    }
                }
            }
        }
        @if (Model.PNQuantities != null)
        {
            <dt>Notion(s)</dt>
            @foreach (var item in Model.PNQuantities)
            {
                if (item.ProductId == Model.Product.Id)
                {
                    @foreach (var x in Model.Notions)
                    {
                        if (x.Id == item.NotionId)
                        {
                            <dd>@item.QtyNotionOnProduct <strong>of</strong> @x.Title | <a asp-controller="ProductNotionQuantities" asp-action="Edit" asp-route-id="@item.Id">Edit</a></dd>
                        }
                    }
                }
            }
        }
        @if (Model.PLQuantities != null)
        {
            <dt>Label(s)</dt>
            @foreach (var item in Model.PLQuantities)
            {
                if (item.ProductId == Model.Product.Id)
                {
                            
                    @foreach (var x in Model.Labels)
                    {
                        if (x.Id == item.LabelId)
                        {
                            <dd>@item.QtyLabelOnProduct <strong>of</strong> @x.Title | <a asp-controller="ProductLabelQuantities" asp-action="Edit" asp-route-id="@item.Id">Edit</a></dd>
                        }
                    }
                }
            }
        }
        @if (Model.PTQuantities != null)
        {
            <dt>Tag(s)</dt>
            @foreach (var item in Model.PTQuantities)
            {
                if (item.ProductId == Model.Product.Id)
                {
                    @foreach (var x in Model.Tags)
                    {
                        if (x.Id == item.TagId)
                        {
                            <dd>@item.QtyTagOnProduct <strong>of</strong> @x.Title | <a asp-controller="ProductTagQuantities" asp-action="Edit" asp-route-id="@item.Id">Edit</a></dd>
                        }
                    }
                }
            }
        }
    </dl>
</div>

<div>
    <a asp-controller="ProductFabricQuantities" asp-action="Create" asp-route-id="@Model.Product.Id"><h5>ADD FABRIC & QUANTITY</h5></a>
    <a asp-controller="ProductNotionQuantities" asp-action="Create" asp-route-id="@Model.Product.Id"><h5>ADD NOTION & QUANTITY</h5></a>
    <a asp-controller="ProductLabelQuantities" asp-action="Create" asp-route-id="@Model.Product.Id"><h5>ADD LABEL & QUANTITY</h5></a>
    <a asp-controller="ProductTagQuantities" asp-action="Create" asp-route-id="@Model.Product.Id"><h5>ADD TAG & QUANTITY</h5></a>
</div>
<div>
    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Product.Id">Edit |</a>
    }
    <a asp-action="Index">Back to List</a>
</div>
<script type="text/javascript" src="~/js/custom.js"></script>
